{% extends 'base.html.twig' %}

{% set breadcrumbs = [{text: 'Faculty'}, {text: 'List'}] %}

{% block title %}List Faculty{% endblock %}
{% block subheader_title %}List all faculties{% endblock %}

{% block content %}
    <div class="m-content">
        <div class="m-portlet m-portlet--full-height m-portlet--tabs m--padding-30">
            <div class="table-responsive m-datatable m-datatable--default m--padding-bottom-50">
                <div class="row">
                    <div class="col-lg-8 col-xl-6">
                        <a class="btn btn-primary m--margin-bottom-10" href="{{ path('faculty_new') }}">New Faculty</a>
                    </div>
                </div>
                <table class="table table-bordered table-hover table-striped">
                    <thead class="thead-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for faculty in pager.currentPageResults %}
                        <tr>
                            <td>{{ faculty.id }}</td>
                            <td>{{ faculty.name }}</td>
                            <td>
                                <a href="{{ path('faculty_show', {'id': faculty.id}) }}">show</a>
                                <a href="{{ path('faculty_edit', {'id': faculty.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                {% include 'pager.html.twig' with {pager: pager} %}
            </div>
        </div>
    </div>
{% endblock %}
